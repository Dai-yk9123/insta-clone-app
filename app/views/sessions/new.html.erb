<% provide(:title, 'Log in') %>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |form| %>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :password %>
        <%= link_to "(forgot password)", '#' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :remember_me, class: "checkbox inline" do %>
          <%= form.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>
      </div>
      <%= form.submit "Log in", class: "btn btn-primary w-100" %>
    <% end %>
    <%= link_to "Facebookでログイン", "/auth/facebook/callback", class: "btn btn-outline-info btn-sm mt-2" %>

  </div>
</div>
